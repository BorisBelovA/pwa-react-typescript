{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "rootDir": ".",
    "types": [
      "./node_modules/@lingui/macro/global"
    ],
    "paths": {
      "models": ["./models"],
      "dto": ["./api/dto"],
      "api-services": ["./api/api-services"],
      "mapping-services": ["./api/mapping-services"],
      "assets": ["./assets"]
    }
  },
  "include": [
    "src"
  ]
}
